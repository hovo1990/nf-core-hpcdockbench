//-- * SLURM cluster at Abagyan Lab



// -- * Enable singularity stuff
singularity.enabled     = true
singularity.autoMounts  = true
conda.enabled           = false
docker.enabled          = false
podman.enabled          = false
shifter.enabled         = false
charliecloud.enabled    = false
apptainer.enabled       = false








process {
    executor = 'slurm'
    maxRetries = 1
    pollInterval = '2 min'
    queueStatInterval = '5 min'
    submitRateLimit = '6/1min'
    retry.maxAttempts = 1

    clusterOptions = ' --export=ALL --nodes=1 --ntasks-per-node=1 -t 09:00:00 '

    scratch = '/scratch/$USER/job_$SLURM_JOB_ID'

    // -- * This gives a very big performance boost
    stageInMode = 'symlink'
    stageOutMode = 'rsync'

    //-- * This makes processes associated with low_cpu label to use only 1 core and 512MB ram

    //-- * Will run on XEON GOLD 40 core node with 4 NVIDIA V100, 384 GB RAM, on expanse there are 52 nodes
    withLabel:gpu_task {
        errorStrategy = 'retry'
        memory = {8.GB * task.attempt}
        cpus = 2
        time = {5.min * task.attempt}
        maxRetries = { task.exitStatus >= 100 ? 4 : 1 }
        queue = 'gpu'
        clusterOptions = " --export=ALL --nodes=1  --ntasks-per-node=1   --gres=gpu:1 --exclude=c[16-18]-ablab "

    }

    withLabel:cpu_task {
        errorStrategy = 'retry'
        memory = {8.GB * task.attempt}
        cpus = 8
        time = {10.min * task.attempt}
        maxRetries = { task.exitStatus >= 100 ? 4 : 1 }
        queue = 'super-compute'
        clusterOptions = " --export=ALL --nodes=1  --ntasks-per-node=1  --exclude=c[16-18]-ablab "

    }


    withLabel:low_cpu{
        errorStrategy = 'retry'
        memory = {4.GB * task.attempt}
        cpus = 4
        time = {10.min * task.attempt}
        maxRetries = { task.exitStatus >= 100 ? 4 : 1 }
        queue = 'super-compute'
        clusterOptions = " --export=ALL --nodes=1  --ntasks-per-node=1 --exclude=c[16-18]-ablab "

    }

    withLabel:low_cpu_debug{
        memory = {2.GB * task.attempt}
        cpus = 2
        time = {55.min * task.attempt}
        // maxRetries = { task.exitStatus >= 100 ? 4 : 1 }
        queue = 'super-compute'
        clusterOptions = " --export=ALL --nodes=1  --ntasks-per-node=1 --exclude=c[16-18]-ablab "

    }


    withLabel:very_low_cpu_debug{
        memory = {1.GB * task.attempt}
        cpus = 1
        time = {55.min * task.attempt}
        // maxRetries = { task.exitStatus >= 100 ? 4 : 1 }
        queue = 'super-compute'
        clusterOptions = " --export=ALL --nodes=1  --ntasks-per-node=1 --exclude=c[16-18]-ablab "

    }



}
timeline.enabled = true
report.enabled = true
report.overwrite = true
